# Hosting Environment Configuration
# Copy this to .env and adjust for your hosting provider

APP_NAME="Ronex"
APP_ENV=production
APP_KEY=base64:YOUR_APP_KEY_HERE
APP_DEBUG=false
APP_URL=https://yourdomain.com

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_database_user
DB_PASSWORD=your_database_password

# Broadcasting (not needed for this app)
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Mail Configuration (if needed)
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Hosting Optimizations
HTTP_TIMEOUT=30
HTTP_CONNECT_TIMEOUT=10
HTTP_VERIFY_SSL=false
HTTP_USER_AGENT="Laravel Currency Service/1.0"

# Currency API Settings
CURRENCY_API_RETRY_ATTEMPTS=3
CURRENCY_API_RETRY_DELAY=2
CURRENCY_CACHE_TTL=300
LOG_CURRENCY_API=true

# Fallback Exchange Rates (if API fails)
FALLBACK_USD_RATE=41.29
FALLBACK_EUR_RATE=48.55

# Cache Settings
CACHE_DRIVER=file
SESSION_DRIVER=file

# Security Settings
SESSION_SECURE_COOKIE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# File Upload Settings
UPLOAD_MAX_FILESIZE=64M
POST_MAX_SIZE=64M
MAX_INPUT_VARS=3000

# Memory and Execution Settings
MEMORY_LIMIT=256M
MAX_EXECUTION_TIME=60

# SSL Settings (for shared hosting)
CURL_CAINFO=""
SSL_VERIFY_PEER=false
SSL_VERIFY_HOST=false
